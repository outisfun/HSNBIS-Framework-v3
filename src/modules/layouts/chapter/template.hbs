<div class = "isf-layout_chapter js--chapter style--{{ chapterStyle }}" id = "{{ modId }}">
    <div class = "isf-layout_chapter__header js--chapter__header">
        <div class = "isf-layout_chapter__img">
            <div class = "isf-layout_chapter__mask">
                <div class = "isf-layout_chapter__background-img__wrapper">
                    {{#if chapterBackground}}
                        <div class="isf-layout_chapter__background-img" style="background-image: url('{{ chapterBackground }}')">
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class = "isf-layout_chapter__title isf-f-white">
            <div class = "isf-container">
                <h1 class = "isf-layout__chapter__title-el">{{{ chapterTitle }}}</h1>
            </div>
        </div>
    </div>

    <div class = "isf-layout_chapter__content js--chapter__content js--content">
        <div class = "isf-{{ container }}">
            <!-- content -->
        </div>
    </div>
</div>
